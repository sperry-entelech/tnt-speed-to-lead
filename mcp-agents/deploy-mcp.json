{
  "name": "deploy-mcp",
  "version": "1.0.0",
  "description": "Production deployment agent for TNT Speed-to-Lead system with hosting, SSL, email configuration, and monitoring setup",
  "type": "mcp-agent",
  "capabilities": [
    "production-hosting-setup",
    "ssl-certificate-management",
    "email-provider-configuration",
    "database-initialization",
    "dns-configuration",
    "monitoring-setup",
    "performance-optimization"
  ],
  "deployment_specifications": {
    "hosting_environment": {
      "primary_option": {
        "provider": "Vercel + Railway",
        "frontend": {
          "platform": "Vercel",
          "domain": "leads.tntlimousine.com",
          "ssl": "automatic_lets_encrypt",
          "cdn": "global_edge_network",
          "performance": "sub_3_second_loads"
        },
        "backend": {
          "platform": "Railway",
          "api_endpoint": "api.tntlimousine.com",
          "database": "PostgreSQL 15",
          "redis": "queue_and_cache",
          "auto_scaling": true
        }
      },
      "alternative_option": {
        "provider": "Azure Enterprise",
        "frontend": "Azure Static Web Apps",
        "backend": "Azure App Service",
        "database": "Azure Database for PostgreSQL",
        "cdn": "Azure Front Door"
      }
    },
    "domain_configuration": {
      "primary_domain": "tntlimousine.com",
      "subdomains": {
        "leads": "leads.tntlimousine.com",
        "api": "api.tntlimousine.com",
        "status": "status.tntlimousine.com"
      },
      "dns_requirements": [
        "CNAME leads -> vercel-deployment",
        "CNAME api -> railway-deployment",
        "A record for root domain",
        "MX records for email"
      ]
    },
    "ssl_configuration": {
      "certificate_type": "Let's Encrypt Wildcard",
      "auto_renewal": true,
      "tls_version": "1.3_minimum",
      "security_headers": [
        "HSTS",
        "Content-Security-Policy",
        "X-Frame-Options",
        "X-Content-Type-Options"
      ]
    }
  },
  "email_configuration": {
